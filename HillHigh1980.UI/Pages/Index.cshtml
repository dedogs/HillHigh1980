@page
@using Newtonsoft.Json
@model IndexModel
@{
    ViewData["Title"] = "Harry Hill High School Class 1980";
    ViewData["IsDetailsView"] = false;
}

<partial name="_NavBar" model="true" />

<!-- Page Content -->
<section class="container">
    <div class="row">
        <div class="col-12">
            <h1 class="my-4 text-center text-lg-left">Lansing Hill High School Classmates 1980</h1>
        </div>
        <div class="col-6">
            <h3 class="my-4">Lansing, Michigan</h3>
        </div>
        <div class="col-6">
            <h3 class="my-4">Joined: <span class="text-orange">@Model.NumberRosters</span></h3>
        </div>
    </div>

    <div id="showRoster" class="row text-center text-lg-left text-hide">
    </div>
</section>

@section Scripts {
    <environment include="Development">
        <script src="~/js/Bundles/indexView.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/Bundles/indexView.min.js"></script>
    </environment>
}
