@page
@using Newtonsoft.Json
@model IndexModel
@{
    ViewData["Title"] = "Harry Hill High School Class 1980";
}

<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">

    <div class="col-md-12 col-lg-6 input-group">
        <input id="rosterSearch" type="text" class="form-control" placeholder="Search - whole or any portion" aria-label="Search Roster">
        <button id="clearText" class="btn-orange" data-toggle="clearText">
            <span class="sprite clear-Text iconWhite"></span>
        </button>
        <div class="input-group-append">
            <select id="searchBy" class="custom-select">
                <option value="searchFirst">First Name</option>
                <option value="searchLast">Last Name</option>
            </select>
        </div>
        <div class="input-group-append">
            <div class="input-group-append">
                <button id="submitSearch" class="btn btn-orange" type="button">Search</button>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-lg-3 input-group">
        <label class="input-group-text" for="sortBy">Sort By</label>
        <select id="sortBy" class="custom-select">
            <option value="sortFirst">First Name</option>
            <option selected value="sortLast">Last Name</option>
        </select>
    </div>
    <div class="col-md-6">
        <partial name="_LoginPartial" />
    </div>

</nav>

<!-- Page Content -->
<section class="container">
    <h1 class="my-4 text-center text-lg-left">Hill High School Classmates 1980</h1>
    <h2 class="my-4 text-center text-lg-left">Lansing, Michigan</h2>

    <div id="showRoster" class="row text-center text-lg-left text-hide">
        <partial name="~/Views/Roster/_Rosters.cshtml"
                 model="Model.Roster" />
    </div>
</section>

@section Scripts {
    <environment include="Development">
        <script src="~/js/Bundles/indexView.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/Bundles/indexView.min.js"></script>
    </environment>
    <script>
        var myObj = @Html.Raw(JsonConvert.SerializeObject(Model.Roster));
    </script>
}
