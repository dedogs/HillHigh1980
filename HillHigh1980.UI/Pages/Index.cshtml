@page
@using Newtonsoft.Json
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<!-- Page Content -->
<div class="container">

    <h1 class="my-4 text-center text-lg-left">Hill High School Class 1980</h1>
    <div class="row">
        <div class="col-6">
            <div class="input-group">
                <input id="rosterSearch" type="text" class="form-control" placeholder="Search" aria-label="Search Roster">
                <div class="input-group-append">
                    <select id="searchBy" class="custom-select">
                        <option value="searchFirst">First Name</option>
                        <option value="searchLast">Last Name</option>
                    </select>
                </div>
                <div class="input-group-append">
                    <div class="input-group-append">
                        <button id="submitSearch" class="btn btn-outline-secondary" type="button">Search</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-3">
            &nbsp;
        </div>
        <div class="col-3">
            <div class="input-group">
                <label class="input-group-text" for="sortBy">Sort By</label>
                <select id="sortBy" class="custom-select">
                    <option value="sortFirst">First Name</option>
                    <option selected value="sortLast">Last Name</option>
                </select>
            </div>
        </div>
    </div>

    <div id="showRoster" class="row text-center text-lg-left text-hide">
        <partial name="~/Views/Roster/_Rosters.cshtml"
                 model="Model.Roster" />
    </div>
</div>

@section Scripts {
    <environment include="Development">
        <script src="~/js/Bundles/indexView.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/Bundles/indexView.min.js"></script>
    </environment>
    <script>
        var myObj = @Html.Raw(JsonConvert.SerializeObject(Model.Roster));
    </script>
}
