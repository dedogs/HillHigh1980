    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Roster[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Roster[0].Middle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Roster[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Roster[0].Found)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Roster[0].Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Roster[0].Caption)
