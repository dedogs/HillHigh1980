            <th>
                @Html.DisplayNameFor(model => model.Roster[0].Link)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Roster) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Middle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Found)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Caption)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Link)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.RosterId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.RosterId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.RosterId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
