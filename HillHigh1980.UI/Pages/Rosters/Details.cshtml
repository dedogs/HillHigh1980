@page
@model HillHigh1980.UI.Pages.Rosters.DetailsModel
@using HillHigh1980.Core.Entity.Jut.Locations

@{
    ViewData["Title"] = "Details";
}

<h2>Roster Details</h2>

<hr />

<div class="row">
    <div class="col-sm-3 col-md-2">
        <img class="img-fluid img-thumbnail" src="~/images/roster/@Model.Roster.Image" alt='@String.Format("{0} {1}",Model.Roster.FirstName, Model.Roster.LastName)' title='@String.Format("{0} {1}",Model.Roster.FirstName, Model.Roster.LastName)'>
        <div class="row">
            <div class="col">
                <a asp-page="/Index" class="btn btn-link text-dark"> Back to List</a>
            </div>
        </div>
    </div>
    <div class="col-sm-9 col-md-10">
        <div class="row">
            <div class="col-md-12 col-lg-6">
                <h4>
                    Current and Past City, State(s)
                </h4>
                <div id="detailsLocations" class="list-group">

                    <button type="button" class="btn btn-link text-dark contact-Add">
                        <div class="row">
                            <div class="sprite contact-Add" title="Add City/State">
                            </div>
                            Add Location
                        </div>
                    </button>

                    @foreach (LocationJut item in Model.Roster.Locations)
                    {
                        <div href="#" class="list-group-item">
                            <div class="row">
                                <div class="col-6">
                                    @String.Format("{0}, {1}", item.City, item.State)
                                </div>
                                <div class="col-6 text-right">
                                    <div id="@item.LocationId" data-cityState=" @String.Format("{0},{1}", item.City, item.State)" class="row float-right">
                                        <div class="sprite contact-Edit" title="Update City/State">
                                        </div>
                                        <div class="sprite contact-Remove" title="Remove City/State">
                                        </div>
                                    </div>
                                    <div class="float-none">&nbsp;</div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div id="addUpdateForm" class="col-md-12 col-lg-6">
                <button id="closeUpdateForm" type="button" class="close">&times;</button>
                <h4>
                    Add Current and past places lived
                </h4>
                <input id="rosterId" data-rosterId="@Model.Roster.RosterId" type="hidden" />
                <div class="form-row" style="margin-bottom: 8px;">
                    <div class="col">
                        <input type="text" id="rosterCity" class="form-control" placeholder="City">
                    </div>
                    <div class="col">
                        <input type="text" id="rosterState" class="form-control" placeholder="State">
                    </div>
                </div>
                <div class="form-row">
                    <div class="col">
                        <button id="postLoctaion" type="button" class="btn btn-outline-dark">Add Location</button>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>


@section Scripts {
    <environment include="Development">
        <script src="~/js/Bundles/detailsViews.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/Bundles/detailsViews.min.js"></script>
    </environment>
}