@page
@model HillHigh1980.UI.Pages.Rosters.DetailsModel
@using HillHigh1980.Core.Entity

@{
    ViewData["Title"] = "Details";
}

<h2>Roster Details</h2>

<hr />

<div class="row">
    <div class="col-sm-3 col-md-2">
        <img class="img-fluid img-thumbnail" src="~/images/roster/@Model.Roster.Image" alt='@String.Format("{0} {1}",Model.Roster.FirstName, Model.Roster.LastName)' title='@String.Format("{0} {1}",Model.Roster.FirstName, Model.Roster.LastName)'>
    </div>
    <div class="col-sm-9 col-md-10">
        <div class="row">
            <div class="col-sm-12 col-md-6">
                <h4>
                    Enter Current and past places lived
                </h4>
                <input id="rosterId" data-id="@Model.Roster.RosterId" type="hidden" />
                <div class="form-row" style="margin-bottom: 8px;">
                    <div class="col">
                        <input type="text" id="rosterCity" class="form-control" placeholder="City">
                    </div>
                    <div class="col">
                        <input type="text" id="rosterState" class="form-control" placeholder="State">
                    </div>
                </div>
                <div class="form-row">
                    <div class="col">
                        <button id="postNewLocation" type="button" class="btn btn-outline-dark">Add Location</button>
                    </div>
                </div>
            </div>
            <div class="col-sm-12 col-md-6">
                <h4>
                    Current and Past City, State(s)
                </h4>
                <div id="detailsLocations" class="list-group">
                    @foreach (Location item in Model.Roster.Locations)
                    {
                        <a id="@item.LocationId" href="#" class="list-group-item">
                            @String.Format("{0} {1}", item.City, item.State)
                        </a>
                    }
                </div>
            </div>
        </div>

    </div>
</div>
<div class="row">
    <div class="col">
        <button type="button" class="btn btn-link text-dark"> Back to List</button>
    </div>
</div>

@section Scripts {
    <environment include="Development">
        <script src="~/js/Bundles/rosterDetails.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/Bundles/rosterDetails.min.js"></script>
    </environment>
}