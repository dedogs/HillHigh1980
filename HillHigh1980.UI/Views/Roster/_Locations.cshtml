@model IEnumerable<HillHigh1980.Core.Entity.Jut.Locations.LocationJut>
@using HillHigh1980.Core.Entity.Jut.Locations

<div id="detailsLocations">
    <button class="btn btn-light contact-Add">
        <span class="sprite contact-Add iconBlack" title="Add City/State">
        </span>
        Add Location
    </button>
    <div class="list-group">
        @foreach (LocationJut item in Model)
        {
            <div href="#" class="list-group-item">
                <div class="row">
                    <div class="col-6">
                        @String.Format("{0}, {1}", item.City, item.State)<br />
                        @item.Country
                    </div>
                    <div class="col-6 text-right">
                        <div id="@item.LocationId" data-cityState=" @String.Format("{0},{1},{2}", item.City, item.State, item.Country)" class="row float-right">
                            <div class="sprite contact-Edit iconBlack" title="Update City/State">
                            </div>
                            <div class="sprite contact-Remove iconBlack" title="Remove City/State">
                            </div>
                        </div>
                        <div class="float-none">&nbsp;</div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>